<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset=utf-8"/>
    <title>{% block title %}Library{% endblock %} - Library system by NFQ FF Team</title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <meta name="generator" content="Bootply"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    {% block stylesheets %}
        <link href="{{ asset('public/css/bootstrap.min.css', absolute=true) }}" rel="stylesheet"/>
        <link href="{{ asset('public/css/style.css', absolute=true) }}" rel="stylesheet"/>
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<div class="wrapper">
    <div class="box">
        <div class="row row-offcanvas row-offcanvas-left">


            {% block sidebar %}
                <div class="column col-sm-2 col-xs-1 sidebar-offcanvas" id="sidebar">

                    <ul class="nav">
                        <li><a href="#" data-toggle="offcanvas" class="visible-xs text-center"><i
                                        class="glyphicon glyphicon-chevron-right"></i></a></li>
                    </ul>

                    <ul class="nav left-nav hidden-xs" id="lg-menu">
                        <li class="active" style="margin-bottom:10px;"><a href="#postModal" role="button"
                                                                          data-toggle="modal"><i
                                        class="glyphicon glyphicon-plus"></i> Pasiūlyti knygą</a></li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-time"></i> Naujausios</a>
                        </li>
                        <li class="active" style="margin-bottom:10px;"><a href="#featured"><i
                                        class="glyphicon glyphicon-star"></i> Skaitomiausios</a></li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-picture"></i> Grožinė
                                literatūra</a></li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-apple"></i> Vaikų
                                literatūra</a></li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-user"></i> Jaunimo
                                literatūra</a></li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-tower"></i> Pomėgiai</a>
                        </li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-cutlery"></i> Kulinarinės
                                knygos</a></li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-eye-open"></i> Žinynai</a>
                        </li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-globe"></i> Savišvieta</a>
                        </li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-usd"></i> Verslas,
                                ekonomika</a></li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-leaf"></i> Menai</a></li>
                        <li class="active"><a href="#featured"><i class="glyphicon glyphicon-pencil"></i> Mokomoji
                                literatūra</a></li>
                    </ul>
                    <ul class="list-unstyled hidden-xs" id="sidebar-footer">
                        <li>
                            <form class="navbar-form navbar-left">
                                <div class="input-group input-group-sm" style="max-width:350px;">
                                    <input class="form-control" placeholder="Kategorijų paieška" name="srch-term"
                                           id="srch-term" type="text">

                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit"><i
                                                    class="glyphicon glyphicon-search"></i></button>
                                    </div>
                                </div>
                            </form>
                        </li>
                    </ul>

                    <!-- tiny only nav-->
                    <ul class="nav visible-xs" id="xs-menu">
                        <li><a href="#featured" class="text-center"><i class="glyphicon glyphicon-list-alt"></i></a>
                        </li>
                        <li><a href="#stories" class="text-center"><i class="glyphicon glyphicon-list"></i></a></li>
                        <li><a href="#" class="text-center"><i class="glyphicon glyphicon-paperclip"></i></a></li>
                        <li><a href="#" class="text-center"><i class="glyphicon glyphicon-refresh"></i></a></li>
                    </ul>

                </div>
            {% endblock %}

            <!-- main right col -->
            <div class="column col-sm-10 col-xs-11" id="main">

                {% block navigation %}
                    <div class="navbar navbar-blue navbar-static-top">
                        <div class="navbar-header">
                            <button class="navbar-toggle" type="button" data-toggle="collapse"
                                    data-target=".navbar-collapse">
                                <span class="sr-only">Toggle</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a href="{{ path('F4LibraryBundle_homepage') }}" class="navbar-brand logo">Lib</a>
                        </div>
                        <nav class="collapse navbar-collapse" role="navigation">
                            <form class="navbar-form navbar-left">
                                <div class="input-group" style="width:480px;">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-default dropdown-toggle"
                                                data-toggle="dropdown"><span class="glyphicon glyphicon-chevron-down"
                                                                             style="font-size: 12px;"></span></button>
                                        <ul class="dropdown-menu search-menu">
                                            <li><a href="#"><span class="glyphicon glyphicon-ok"
                                                                  style="margin-right:10px"></span> Visi</a></li>
                                            <li><a href="#"><span class="glyphicon" style="margin-right:10px"></span>
                                                    Knygos
                                                    pavadinimas</a></li>
                                            <li><a href="#"><span class="glyphicon" style="margin-right:10px"></span>
                                                    Autorius</a></li>
                                            <li><a href="#"><span class="glyphicon" style="margin-right:10px"></span>
                                                    Žymės</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <input class="form-control" placeholder="Paieška..." type="text">
                                    <span class="input-group-addon"><span
                                                class="glyphicon glyphicon-search"></span> </span>
                                </div>
                            </form>
                            <ul class="nav navbar-nav">
                                <li>
                                    <a href="#postModal" role="button" data-toggle="modal"><i
                                                class="glyphicon glyphicon-plus"></i></a>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <a href="{{ path('F4LibraryBundle_homepage') }}"><i class="glyphicon glyphicon-home" style="margin-right:5px;"></i>
                                        Pagrindinis</a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="username">Jim Carrey</span>
                                        <i class="glyphicon glyphicon-user"></i> <i
                                                class="glyphicon glyphicon-chevron-down"
                                                style="font-size:12px;"></i></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="">Mano profilis</a></li>
                                        <li><a href="">Mano knygos</a></li>
                                        <li><a href="">Profilio nustatymai</a></li>
                                        <li><a href="">Atsijungti</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i
                                                class="glyphicon glyphicon-bell text-danger"><span
                                                    class="n-counter">4</span></i></a>
                                    <ul class="dropdown-menu navbar-notifications">
                                        <li>
                                            <a href="#">
                                                <div>
                                                    <i class="glyphicon glyphicon-info-sign" style="color:orange;"></i>
                                                    Jūsų
                                                    rezervuota knyga atsilaisvino!
                                                </div>
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="#">
                                                <div>
                                                    <i class="glyphicon glyphicon-exclamation-sign"
                                                       style="color:red"></i>
                                                    Iki knygos grąžinimo liko 2 dienos!
                                                </div>
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="#">
                                                <div>
                                                    <i class="glyphicon glyphicon-info-sign" style="color:green"></i>
                                                    Bibliotekoje atsirado Jūsų pageidaujama knyga!
                                                </div>
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="#">
                                                <div>
                                                    <i class="glyphicon glyphicon-info-sign" style="color:green"></i>
                                                    Jūsų
                                                    knyga buvo sėkmingai grąžinta.
                                                </div>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                    </div>
                {% endblock %}

                <div class="padding">
                    <div class="full col-sm-9">
                        <div class="row">
                            <div class="col-sm-12">
                                {% block content %} {% endblock %}
                            </div>
                        </div>
                        <hr>
                        <div class="row" id="footer">
                            <div class="col-sm-12">
                                <a href="#" class="pull-right">© Copyright 2015 NFQ FF Team</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!--post modal-->
<div id="postModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                Pasiūlyti knygą
            </div>
            <div class="modal-body">
                <form class="form center-block">
                    <div class="form-group">
                        <textarea class="form-control input-lg" autofocus=""
                                  placeholder="Kokios knygos norėtumėt?"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div>
                    <button class="btn btn-primary btn-sm" data-dismiss="modal" aria-hidden="true">Pateikti</button>
                </div>
            </div>
        </div>
    </div>
</div>
    <script src="{{ asset('public/js/jquery.min.js', absolute=true) }}"></script>
    <script src="{{ asset('public/js/bootstrap.min.js', absolute=true) }}"></script>
    <script src="{{ asset('public/js/scripts.js', absolute=true) }}"></script>
{% block javascripts %}

{% endblock %}
</body>

</html>