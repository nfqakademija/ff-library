<li class="previous">
    <a{% if app.request.get('page') <= 1 %} class="disabled"{% endif %} id="ajaxList" href="#"
                                                                        data-href="{{ path('F4LibraryBundle_ajax_call', { list: app.request.get('list'), limit: app.request.get('limit'), page: app.request.get('page') - 1 }) }}"><i
                style="font-size:10px"
                class="glyphicon glyphicon-chevron-up"> </i> Atgal</a>
</li>
<li>
    <span class="paging">{{ app.request.get('page') * app.request.get('limit') - app.request.get('limit') + 1 }}-{{ app.request.get('page') * app.request.get('limit') }} ({{ app.request.get('limit') * pages }})</span>
</li>
<li class="next">
    <a{% if app.request.get('page') >= pages %} class="disabled"{% endif %} id="ajaxList" href="#"
                                                                            data-href="{{ path('F4LibraryBundle_ajax_call', { list: app.request.get('list'), limit: app.request.get('limit'), page: app.request.get('page') + 1 }) }}">Pirmyn
        <i style="font-size:10px"
           class="glyphicon glyphicon-chevron-down"> </i></a>
</li>
