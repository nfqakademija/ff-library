<li class="previous">
    {% if app.request.get('page') > 1 %}
        <a id="ajaxList" href="#"
           data-href="{{ path('F4LibraryBundle_ajax_call', { list: app.request.get('list'), limit: app.request.get('limit'), page: app.request.get('page') - 1 }) }}"
           data-action="previous" id="book-tab"><i style="font-size:10px"
                                                   class="glyphicon glyphicon-chevron-up"> </i> Atgal</a>
    {% endif %}
</li>
<li>{{ app.request.get('page') }} - {{ app.request.get('limit') }} ({{ app.request.get('limit') * pages }})</li>
<li class="next">
    {% if app.request.get('page') < pages %}
        <a id="ajaxList" href="#"
           data-href="{{ path('F4LibraryBundle_ajax_call', { list: app.request.get('list'), limit: app.request.get('limit'), page: app.request.get('page') + 1 }) }}"
           data-action="next" id="book-tab">Pirmyn <i style="font-size:10px"
                                                      class="glyphicon glyphicon-chevron-down"> </i></a>
    {% endif %}
</li>