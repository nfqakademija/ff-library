{% extends 'F4LibraryBundle::layout.html.twig' %}

{% block title %}Titulinis{% endblock %}

{% block content %}
    <div class="panel with-nav-tabs panel-default">
        <div class="tab-selection">
            <ul class="nav nav-tabs">
                <li class="active"><a style="border:0" href="#tab1default"
                                      data-href="{{ path('F4LibraryBundle_ajax_call', {list: 'newest'}) }}"
                                      data-toggle="tab" id="ajaxList">Naujausios</a></li>
                <li><a style="border:0" href="#tab2default"
                       data-href="{{ path('F4LibraryBundle_ajax_call', {list: 'popular'}) }}"
                       data-toggle="tab" id="ajaxList">Skaitomiausios</a></li>
                <li><a style="border:0" href="#tab3default"
                       data-href="{{ path('F4LibraryBundle_ajax_call', {list: 'soon'}) }}"
                       data-toggle="tab" id="ajaxList">Greitai atsilaisvins</a></li>
            </ul>
        </div>
        <div class="panel-body ajaxList">
            {% include 'F4LibraryBundle:Tools:loading.html.twig' %}
            <div class="tab-content">
                <div class="tab-pane fade in active" id="tab1default"></div>
                <div class="tab-pane fade" id="tab2default"></div>
                <div class="tab-pane fade" id="tab3default"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        initBookList('{{ path('F4LibraryBundle_ajax_call', {list: 'newest'}) }}', '#tab1default');
    </script>
{% endblock %}
